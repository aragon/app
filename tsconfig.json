{
  "compilerOptions": {
    "allowJs": true,
    "esModuleInterop": true,
    "incremental": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "lib": ["dom", "dom.iterable", "esnext"],
    "module": "esnext",
    "moduleResolution": "bundler",
    "noEmit": true,
    "paths": {
      "@/*": ["./src/*"],
      "@aragon/gov-ui-kit": ["./src/shared/lib/@aragon/gov-ui-kit"],
      "@aragon/gov-ui-kit-original": ["./node_modules/@aragon/gov-ui-kit"]
    },
    "plugins": [
      {
        "name": "next"
      }
    ],
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "strictNullChecks": true,
    "target": "ES2017"
  },
  "exclude": ["node_modules", ".next/**/*", ".vercel/**/*", "coverage", ".yarn/**/*"],
  "files": [".next/types/link.d.ts"],
  "include": ["*.config.js", "*.config.mjs", ".eslintrc.js", "next-env.d.ts", "src", ".next/types/**/*.ts"]
}
