# Base npm security and reproducibility
save-exact=true
strict-peer-dependencies=true
auto-install-peers=true

# pnpm performance and safety
side-effects-cache=true
prefer-frozen-lockfile=true
dedupe-peer-dependents=true
minimum-release-age=10080 # freeze new package versions for 7 days (10080 minutes)
ignore-scripts=true

# Auto-install @types packages for TypeScript
auto-install-types=true

# Node version management by pnpm
use-node-version=22.20.0
node-version=22.20.0
engine-strict=true
